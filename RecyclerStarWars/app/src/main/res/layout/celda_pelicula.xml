<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000">


    <ImageView
        android:id="@+id/celdaPelicula_imagen"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logomuvisketch"
        ></ImageView>

    <TextView
        android:gravity="center"
        tools:text="Titulo"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:id="@+id/celdaPelicula_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/celdaPelicula_imagen"/>
    <TextView
        android:gravity="center"
        tools:text="director"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:id="@+id/celdaPelicula_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/celdaPelicula_titulo"
        android:layout_toRightOf="@id/celdaPelicula_imagen"/>
    <TextView
        android:gravity="center"
        tools:text="27-04-1993"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:id="@+id/celdaPelicula_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/celdaPelicula_director"
        android:layout_toRightOf="@id/celdaPelicula_imagen"/>



</RelativeLayout>